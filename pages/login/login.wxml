<!--pages/login/login.wxml-->

<view class="container">
  <view class="welcome">欢迎登录!</view>
</view><!--view非常占用空间-->
<van-cell-group>
  <van-field
    value="{{ username }}"
    required
    clearable
    label="用户名"
    icon="question-o"
    placeholder="请输入用户名"
    bind:click-icon="onClickIcon"
  />

  <van-field
    value="{{ password }}"
    type="password"
    label="密码"
    placeholder="请输入密码"
    required
    border="{{ false }}"
  />
</van-cell-group>
<button class="registerBtn" bindtap="goto">登录</button>

